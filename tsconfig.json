{
  "extends": "./tsconfig/base.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "lib": ["esnext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "@types/g.d.ts"],
  "exclude": ["node_modules", "lib", "src/**/*.spec.ts", "src/**/*.spec.js"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
